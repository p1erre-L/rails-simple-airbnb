<h1>All our Flats (<%= @flats.count %>)</h1>


<div class="d-flex gap-3 mt-3 flex-wrap">
  <% @flats.each do |flat| %>
    <div class="card shadow-sm " style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"> <%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <i class="fa-solid fa-user-group"></i><%= flat.number_of_guests %>
        <i class="fa-solid fa-euro-sign mb-4"></i><%= flat.price_per_night %>
        <div class="bg-white position-relative py-3 bottom-0 mt-1">
          <%= link_to "More info", flat_path(flat), class: "text-primary text-decoration-none h6" %>
          <%= link_to "Edit", edit_flat_path(flat), class: "text-warning text-decoration-none h6" %>
          <%= link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger text-decoration-none h6" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
